<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="My Nanodegree Apps!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/abc_action_bar_default_height_material"
        android:id="@+id/titleLabel"
        android:elegantTextHeight="false"
        android:fontFamily="@string/abc_action_mode_done"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#ff010000"
        android:textAlignment="center"
        android:gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_weight="1"

        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/titleLabel"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="0dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPORTIFY STREAMER"
            android:id="@+id/btnSportify"
            android:layout_centerHorizontal="true"
            android:onClick="btnClick"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyle"
            android:theme="@style/AppTheme" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORES APP"
            android:id="@+id/btnScores"
            android:layout_below="@+id/btnSportify"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:onClick="btnClick"
            android:background="@drawable/buttonstyle"
            style="@style/AppTheme" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIBRARY APP"
            android:id="@+id/btnLibrary"
            android:layout_below="@+id/btnScores"
            android:layout_centerHorizontal="true"
            android:onClick="btnClick"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyle" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            android:id="@+id/btnBiggerApp"
            android:layout_below="@+id/btnLibrary"
            android:layout_centerHorizontal="true"
            android:onClick="btnClick"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XYZ READER"
            android:id="@+id/btnReader"
            android:layout_marginTop="10dp"
            android:onClick="btnClick"
            android:background="@drawable/buttonstyle" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/btnCapstoneApp"
            android:layout_marginTop="10dp"
            android:background="#ffde63c7"
            android:layout_below="@+id/btnBiggerApp"
            android:layout_centerHorizontal="true"
            android:onClick="btnClick"
            android:textColor="#ffffffff" />
    </LinearLayout>

</RelativeLayout>
